<article class='post'>
  <div class='title'>
    <h3>{{title}}</h3>
    <p class='post-body'>{{post_body}}</p>
    {{#if post_url}}
      <p class='post-url'>
        Ref link:
        <a href='{{post_url}}' target='_blank'>{{format_url post_url}}</a>
      </p>
    {{/if}}
  </div>
  <div class='meta'>
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href='/post/{{id}}'>
      {{comments.length}}
      {{format_plural 'comment' comments.length}}
    </a>
  </div>
</article>