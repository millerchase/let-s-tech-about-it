<article>
  <a href='/dashboard'> &larr; Back to Dashboard</a>
  <h2>Edit Post</h2>
  <form class='edit-post-form'>
    <div>
      <input type='text' name='post-title' value='{{post.title}}' />
      <textarea name="post-body" cols="30" rows="10">{{post.post_body}}</textarea>
      <input type="text" name='post-url' value='{{post.post_url}}' />
    </div>
    <div>
      by you on
      {{format_date post.created_at}}
      |
      <a href='/post/{{post.id}}'>{{post.comments.length}}
        {{format_plural 'comment' post.comments.length}}</a>
    </div>
    <button type='submit'>Save post</button>
    <button type='button' class='delete-post-btn'>Delete post</button>
  </form>
  <form class='comment-form'>
    <div>
      <textarea name='comment-' id='' cols='30' rows='10'></textarea>
    </div>
    <div>
      <button type='submit'>add comment</button>
    </div>
  </form>

  {{> comments post.comments}}
</article>

<script src='/js/edit-post.js'></script>
<script src='/js/delete-post.js'></script>
<script src='/js/comment.js'></script>