<div class='signin' id='login-section'>
  <form class='login-form'>
    <div>
      <label for='email'>Email:</label>
      <input type='text' id='email-login' />
    </div>
    <div>
      <label for='password'>Password:</label>
      <input type='password' id='password-login' />
    </div>
    <div>
      <button class='signin-btn' type='submit'>Login</button>
    </div>
  </form>
  <div class='signin-footer'>
    <button class='btn-no-style' id='switch-signup'>Sign Up Form</button>
  </div>
</div>

<div class='signin hidden' id='signup-section'>
  <form class='signup-form'>
    <div>
      <label for='username-signup'>Username:</label>
      <input type='text' id='username-signup' />
    </div>
    <div>
      <label for='email-signup'>Email:</label>
      <input type='text' id='email-signup' />
    </div>
    <div>
      <label for='password-signup'>Password:</label>
      <input type='password' id='password-signup' />
    </div>
    <div>
      <button class='signin-btn' type='submit'>Sign Up</button>
    </div>
  </form>
  <div class='signin-footer'>
    <button class='btn-no-style' id='switch-login'>Login Form</button>
  </div>

</div>

<script src='/js/login.js'></script>